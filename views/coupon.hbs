<div class="mx-5">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Coupon Name</th>
        <th scope="col">Code</th>
        <th scope="col">Minimum Amount</th>
        <th scope="col">Discount</th>
        <th scope="col">Date</th>
        <th scope="col">Status</th>
      </tr>
    </thead>
    {{#each coupons}}
    <tbody>
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.code}}</td>
        <td>{{this.minAmount}} </td>
        <td>{{this.cashback}}</td>
        <td>{{this.expiry}}</td>
        <td>{{this.status}}</td>
        <td><a href="/admin/editcoupon/{{this._id}}" class="btn">Edit</a></td>
        <td> {{#if this.block}}

          <a class="btn btn-success" href="/admin/unlistcoupon/{{this._id}}">UnList</a>
          {{else}}

          <a class="btn btn-danger" href="/admin/listcoupon/{{this._id}}">List</a>
          {{/if}}
        </td>
      </tr>
    </tbody>
    {{/each}}
  </table>
</div>