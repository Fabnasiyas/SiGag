<body>
    
    <header>
        <!-- Header Start -->
        <div class="header-area">
            <div class="main-header header-sticky">
                <div class="container-fluid">
                    <div class="menu-wrapper">
                        <!-- Logo -->
                        <div class="logo">
                            <a href="/"><h1>Si<span style="color: #ff2020;">Gag</span></h1></a>
                        </div>
                        <!-- Main-menu -->
                        <div class="main-menu d-none d-lg-block">
                            <nav>                                                
                                <ul id="navigation">  
                                    <li><a href="#">Home</a></li>
                                    <li><a href="/viewallproducts">shop</a></li>
                                  
                                    <li><a href="#">Pages</a>
                                        <ul class="submenu">
                                            
                                            <li><a href="/cart">Cart</a></li>
                                            
                                        </ul>
                                    </li>
                                    <li><a href="">Contact</a></li>
                                </ul>
                            </nav>
                        </div>
                        <!-- Header Right -->
                        <div class="header-right">
                            <ul>
                                <li> <a href="/userprofile"><span class="flaticon-user"></span></a></li>
                                <li><a href="/cart"><span class="flaticon-shopping-cart"></span></a> </li>
                            </ul>
                        </div>
                    </div>
                    <!-- Mobile Menu -->
                    <div class="col-12">
                        <div class="mobile_menu d-block d-lg-none"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Header End -->
    </header>
    <main>
       
     
            
            <div class="row justify-content-center" style="padding-top: 100px;">
                
                <div class="col-md-6" style="padding-left: 200px;">
               
                    <div class="single_product_img">
                       <div class="wrap-pic-w pos-relative" id="zoom-image">
                        <img src="/product-images/{{product.image.filename}}" alt="#" class="img-fluid">
                    </div>
                    </div>
                    {{#each product.sideimage}}
                    <div class="mx-1 my-3" style="display: inline-block;">
                        <img src="/product-images/{{this.filename}}" alt="#" class="img-fluid " style="height: 100px; width: 100px; ">
                    </div>
                    {{/each}}
                    
                </div>
                <div class="col-md-6">
                    
                <div class="single_product_text  pt-5">
                    <h2>{{product.productname}}</h2>
                    <p>{{product.description}} </p>
                    <h5>Brand:{{product.brand}}</h5>
                    <h5>Category:{{product.category}}</h5>
                    <h5>Price:{{product.price}}</h5>
                    
                    <div class="card_area">
                        
                    <div class="add_to_cart">
                        {{!-- <a href="/addtocart/{{product._id}}" class="btn btn-dark">add to cart</a> --}}
                        <button class="btn btn-dark" onclick="addToCart('{{product._id}}')">Add to cart</button>
                    </div>
                    </div>
                </div>
                
                </div>
          
            </div>
            <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
            <script>
                function addToCart(proId){
                    axios.get('/addtocart/'+proId).then((resp)=>{
                        console.log(resp)
                    })
                }
                
            </script>
            
   <script src="https://unpkg.com/js-image-zoom@0.4.1/js-image-zoom.js"></script>
            <script>
        var options={
            width:350,
            height:350,
            zoomwidth:200,
            offset:{vertical:0, horizontal:10},
            scale:.9
        }

        new ImageZoom(document.getElementById("zoom-image"),options)

    </script>
       
</body>

