<body>
    
    <header>
        <!-- Header Start -->
        <div class="header-area">
            <div class="main-header header-sticky">
                <div class="container-fluid">
                    <div class="menu-wrapper">
                        <!-- Logo -->
                        <div class="logo">
                           <a href="/"><h1>Si<span style="color: #ff2020;">Gag</span></h1></a>
                        </div>
                        <!-- Main-menu -->
                        <div class="main-menu d-none d-lg-block">
                            <nav>                                                
                                <ul id="navigation">  
                                    <li><a href="/">Home</a></li>
                                    <li><a href="/viewallproducts">shop</a></li>
                                    <li><a href="#">Pages</a>
                                        <ul class="submenu">
                                            <li><a href="/cart">Cart</a></li>
                                            
                                        </ul>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                        <!-- Header Right -->
                         <div class="header-right">
                            <ul>
                                <li> <a href="/userprofile"><span class="flaticon-user"></span></a></li>
                                <li><a href="/cart"><span class="flaticon-shopping-cart"></span></a> </li>
                            </ul>
                        </div>
                    </div>
                   
    </header>
    <main>
        
        <!--================Single Product Area =================-->
         {{#each details }}
         <div class="d1" >
        <div class="product_image_area ">
            <div class="container ">
            <div class="row justify-content-center">
                    <div class="single_product_img">
                        <img src="/product-images/{{this.products.image.filename}}" alt="#" class="img-fluid mt-5 imgdiv">
                    </div>
                <div class="col-lg-8">
                <div class="single_product_text text-center pt-3 align-items-start">
          <h2>{{this.products.productname}}</h2>
                <p>{{this.products.description}} </p>
                <h5>Brand:{{this.products.brand}}</h5>
                <h5>Category:{{this.products.category}}</h5>
                <h5>Price:{{this.products.price}}</h5>
                <h5>Address:{{this.address.address}}</h5>
                <h5>Order Date: {{this.orderDate}}</h5>
                <h5>Order Status: {{this.orderStatus}}</h5>
                <h5>Expected Delivery Date:{{this.deliveryDate}}</h5>
                <div class="card_area">

                    <div class="add_to_cart">
                         {{#unless this.cancel}}
                        <a href="/ordercancel/{{this._id}}" class="btn btn-primary cancel">Cancel Order</a>
                        {{/unless}}
                        {{#if this.returnstatus}}
                        <a href="/orderreturn/{{this._id}}" class="btn btn-primary ">Return Order</a>
                        {{!-- <a href="/review/{{this._id}}" class="btn btn-primary ml-5">review</a>    --}}
                        </div>
                        {{/if}}
                    </div>
                </div>
                </div>
            </div>
            </div>
        </div>
        </div>
        {{/each}}
        
    </main>
    
   <style>
