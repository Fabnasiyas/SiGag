<p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-5">Edit Product</p>


<form action="/admin/edit-product/{{pro._id}}" method="POST" enctype="multipart/form-data">
  <div class="container mt-5">
    <label for="">Product Name</label>
    <input type="text" name="productname" class="form-control" value="{{pro.productname}}" />
    <label for="">Price</label>
    <input type="text" name="price" class="form-control" value="{{pro.price}}" />
    <label for="">Brand</label>
    <input type="text" name="brand" class="form-control" value="{{pro.brand}}" />

    <label for="">Category</label>
    <select name="category" id="category" class="form-control" required>

      <option value="{{pro.categoryy}} " selected>{{pro.category}} </option>
      {{#each result}}


      <option value="{{this.category}}" selected>{{this.category}}</option>
      {{/each}}
    </select>
    <label for="">Stock</label>
    <input type="Number" name="stock" class="form-control" value="{{pro.stock}}" />
    <label for="">Description</label>
    <input type="text" name="description" class="form-control" value="{{pro.description}}" />

    <label for="">Image</label>
    <div>
      <input type="file" id="form3Example1c" name="image" class="form-control" placeholder="image" />
      <img src="/product-images/{{pro.image.filename}}" alt="" style="width: 50px; height: 50px;" id="imgView">
    </div>
    <label for="">sideImage</label>

    <input type="file" id="form3Example1c" name="sideimage" class="form-control" placeholder="image" multiple />
    {{#each pro.sideimage}}
    <img src="/product-images/{{this.filename}}" alt="" style="width: 50px; height: 50px;" id="imgView">
    {{/each}}
    <button type="submit" class="btn btn-success mt-5">Submit</button>
</form>
