                <!-- Mobile Menu -->
                <div class="col-12">
                    <div class="mobile_menu d-block d-lg-none"></div>
                </div>
            </div>
        </div>
    </div>
 
<div class="mx-5">
<div class="table-responsive mt-5">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Product Name</th>
        <th scope="col">Image</th>
        <th scope="col">Quantity</th>
        <th scope="col">OrderId</th>
        <th scope="col">Address</th>
        <th scope="col">Payment</th>
        <th scope="col">Amount</th>
        <th scope="col">Status</th>
        <th scope="col">Order Date</th>
        <th scope="col">Expected Delivery</th>
        <th scope="col">Details</th>
      </tr>
    </thead>
    <tbody>
      {{#each orders}}
      <tr>
        <td>{{this.products.productname}}</td>
        <td>
          <img src="/product-images/{{this.products.image.filename}}" alt="{{this.products.productname}} image" class="img-fluid" style="max-height: 100px;">
        </td>
        <td>{{this.quantity}}</td>
        <td>{{this._id}}</td>
        <td>{{this.address.address}}</td>
        <td>{{this.payment}}</td>
        <td>{{this.totalPrice}}</td>
        <td>{{this.orderStatus}}</td>
        <td>{{this.orderDate}}</td>
        <td>{{this.deliveryDate}}</td>
        <td>
          <a href="/vieworderdetails/{{this._id}}" class="btn btn-outline-dark">View</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

</div>
